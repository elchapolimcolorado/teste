@{
    ViewBag.Title = "Cat";
    Layout = "~/Views/Shared/_layoutMaster.cshtml";
    @model SoftFramework.Web.Models.MercadoLivre.ProdutoModel
}
@section scripts
{
    <script type="text/javascript" src="~/assets/js/application/produto/index.js"></script>
    <!-- iCheck -->
    <script src="~/assets/vendors/iCheck/icheck.min.js"></script>
}
    <style>
        .table-responsive td, .table-responsive th {
            text-align: center
        }
    </style>

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Produtos <small>Abaixo todos os produtos principais cadastrados</small></h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="clearfix"></div>
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Lista de produtos @*<small>Custom design</small>*@</h2>
                        <div class="clearfix"></div>
                    </div>

                    <div class="x_content">
                        <br />
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Produto</th>
                                        @*<th>Descricao</th>*@
                                        <th>Id no Mercado Livre</th>
                                        <th>Quantidade</th>
                                        <th style="text-align: center">Qtde. Produtos relecionados</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model.Itens)
                                {
                                    <tr>
                                        <td>@item.Nome</td>
                                        @*<td>@item.Descricao</td>*@
                                        <td>@item.IdMercadoLivre</td>
                                        <td>@item.Quantidade</td>
                                        <td style="text-align: center">@item.QuantidadeProdutosRelacionados</td>
                                        @*<td><span class="badge badge-success badge-icon"><i class="fa fa-star" aria-hidden="true"></i><span>@item.QuantidadeProdutosRelacionados</span></span></td>*@
                                        <td>
                                            <a href="~/Produto/Editar?IdProduto=@item.Id">Editar | </a>
                                            <a href="~/Produto/AlterarQuantidade?IdProduto=@item.Id">Alterar Quantidade | </a>
                                            <a href="#" class="inativar" data-id="@item.Id">Excluir</a>
                                            @*<input type="button" class="atualizar btn btn-success" data-id-produto="@item.Id" data-nome="@item.Nome" value="Editar"/>*@
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                        <div class="ln_solid"></div>
                        <div class="form-group">
                            <div class="col-md-2 col-md-offset-10">
                                <a href="~/Produto/AssociacaoProdutos" class="btn btn-success">Novo</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
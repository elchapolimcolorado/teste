@{
    ViewBag.Title = "Ferramenta";
    Layout = "~/Views/Shared/_layoutMaster.cshtml";
    @model IEnumerable<SharedToolBox.Web.Models.FerramentaViewModel>
}
@section scripts
{
    <script type="text/javascript" src="~/assets/js/application/ferramenta.js"></script>
    <!-- iCheck -->
    <script src="~/assets/vendors/iCheck/icheck.min.js"></script>
}
    <style>
        .table-responsive td, .table-responsive th {
            text-align: center
        }
    </style>

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Ferramentas</h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="clearfix"></div>
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Lista de Ferramentas</h2>
                        <div class="clearfix"></div>
                    </div>

                    <div class="x_content">
                        <br />
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Nome</th>
                                        <th>Descrição</th>
                                        <th>Marca</th>
                                        <th>Subtipo</th>
                                        <th>Ativo?</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Nome</td>
                                        <td>@item.Descricao</td>
                                        <td>
                                            @Html.DropDownList("ddlMarca" + item.MarcaCodigo, new SelectList(ViewBag.Marcas as System.Collections.IEnumerable, "Codigo", "Nome").Where(x => x.Value.ToString().Equals(item.MarcaCodigo.ToString())), new { @disabled = "disabled" })
                                        </td>
                                        <td>
                                            @Html.DropDownList("ddlSubtipo" + item.SubtipoCodigo, new SelectList(ViewBag.Subtipos as System.Collections.IEnumerable, "Codigo", "Nome").Where(x => x.Value.ToString().Equals(item.SubtipoCodigo.ToString())), new { @disabled = "disabled" })
                                        </td>
                                        <td>
                                            @Html.CheckBox("chk", item.Ativo, new { @disabled = "disabled" })
                                        </td>
                                        <td>
                                            <a href="~/Ferramenta/Editar?id=@item.Codigo">Editar | </a>
                                            <a href="#" class="inativar" data-id="@item.Codigo">Excluir</a>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                        <div class="ln_solid"></div>
                        <div class="form-group">
                            <div class="col-md-2 col-md-offset-10">
                                <a href="~/Ferramenta/Novo" class="btn btn-success">Novo</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
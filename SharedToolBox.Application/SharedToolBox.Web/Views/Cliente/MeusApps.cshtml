@{
    ViewBag.Title = "MeusLugares";
    Layout = "~/Views/Shared/_layoutMaster.cshtml";
    @model SoftFramework.Web.Models.MercadoLivre.HomeModel
 }
@section scripts
{
    <script type="text/javascript" src="~/assets/js/application/home/index.js"></script>
}

    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3>Meus Aplicativos Mercado Livre <small>Abaixo todos os aplicativos configurados no Mercado Livre</small></h3>
                </div>
            </div>

            <div class="clearfix"></div>

            <div class="row">
                <div class="clearfix"></div>

                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Meus Aplicativos Mercadolivre @*<small>Custom design</small>*@</h2>
                            <div class="clearfix"></div>
                        </div>

                        <div class="x_content">
                            <br />

                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                    <tr>
                                        <th>Access Token</th>
                                        <th class="right">AppId</th>
                                        <th>Data Expiração</th>
                                        <th>Logar</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    @foreach (var item in Model.Apps)
                                    {
                                        <tr>
                                            <td>@item.AccessToken</td>
                                            <td class="right">@item.AppId</td>
                                            <td><span>@item.DataExpiracao</span></td>
                                            <td><input type="button" class="logar btn btn-success" data-id-app="@item.Id" data-app-number="@item.AppId" value="Logar"/></td>
                                        </tr>
                                    }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

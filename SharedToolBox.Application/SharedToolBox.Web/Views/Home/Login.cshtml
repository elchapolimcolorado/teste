@model SoftFramework.Web.Models.Login.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <title>GRE</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Charisma, a fully featured, responsive, HTML5, Bootstrap admin template.">
    <meta name="author" content="Muhammad Usman">

    <!-- The styles -->
    <link href="~/Content/_template/css/bootstrap-united.css" rel="stylesheet">
    <style type="text/css">
        body {
            padding-bottom: 40px;
        }

        .sidebar-nav {
            padding: 9px 0;
        }
    </style>
    <link href="~/Content/_template/css/bootstrap-responsive.css" rel="stylesheet">
    <link href="~/Content/_template/css/charisma-app.css" rel="stylesheet">
    <link href="~/Content/_template/css/jquery-ui-1.8.21.custom.css" rel="stylesheet">
    <link href='~/Content/_template/css/fullcalendar.css' rel='stylesheet'>
    <link href='~/Content/_template/css/fullcalendar.print.css' rel='stylesheet' media='print'>
    <link href='~/Content/_template/css/chosen.css' rel='stylesheet'>
    <link href='~/Content/_template/css/uniform.default.css' rel='stylesheet'>
    <link href='~/Content/_template/css/colorbox.css' rel='stylesheet'>
    <link href='~/Content/_template/css/jquery.cleditor.css' rel='stylesheet'>
    <link href='~/Content/_template/css/jquery.noty.css' rel='stylesheet'>
    <link href='~/Content/_template/css/noty_theme_default.css' rel='stylesheet'>
    <link href='~/Content/_template/css/elfinder.min.css' rel='stylesheet'>
    <link href='~/Content/_template/css/elfinder.theme.css' rel='stylesheet'>
    <link href='~/Content/_template/css/jquery.iphone.toggle.css' rel='stylesheet'>
    <link href='~/Content/_template/css/opa-icons.css' rel='stylesheet'>
    <link href='~/Content/_template/css/uploadify.css' rel='stylesheet'>

    <!-- The HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
	  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->

    <!-- The fav icon -->
    <link rel="shortcut icon" href="img/favicon.ico">
</head>

<body>
    <div class="container-fluid">
        <div class="row-fluid">

            <!--/row-->
            
            <div class="row-fluid" style="margin-top: 15%;">
                <div class="well span5 center login-box">
                    <form class="form-horizontal" action="index.html" method="post">
                        <fieldset>
                            <p class="center span5" style="font-size: 20px;">
                                Login
                            </p>
                            <div class="input-prepend" title="Username" data-rel="tooltip">
                                <span class="add-on"><i class="icon-user"></i></span>
                                @Html.TextBoxFor(x => x.Username, new {autofocus = "autofocus", @class = "input-large span10", placeholder = "login"})
                                @Html.ValidationMessageFor(x => x.Username)
                            </div>
                            <div class="clearfix"></div>

                            <div class="input-prepend" title="Password" data-rel="tooltip">
                                <span class="add-on"><i class="icon-lock"></i></span>
                                @Html.PasswordFor(x => x.Password, new {@class = "input-large span10", placeholder = "senha"})
                                @Html.ValidationMessageFor(x => x.Password)
                            </div>
                            <div class="clearfix"></div>

                            <div class="input-prepend">
                                <label class="remember" for="remember">
                                    @Html.CheckBoxFor(x => x.RememberMe)Lembrar
                                </label>
                            </div>
                            <div class="clearfix"></div>

                            <p class="center span5">
                                <button type="submit" class="btn btn-inverse">Logar</button>
                            </p>
                            @if (!String.IsNullOrEmpty(Model.Message))
                            {
                                <p class="center span5">
                                    @Model.Message
                                </p>
                            }
                        </fieldset>
                    </form>
                </div>
                <!--/span-->
            </div>
            <!--/row-->
        </div>
        <!--/fluid-row-->

    </div>
    <!--/.fluid-container-->

    <!-- external javascript
	================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->

    <!-- jQuery -->
    <script src="~/Content/_template/js/jquery-1.7.2.min.js"></script>
    <script src="~/Content/_template/js/jquery-ui-1.8.21.custom.min.js"></script>
    <script src="~/Content/_template/js/bootstrap-transition.js"></script>
    <script src="~/Content/_template/js/bootstrap-alert.js"></script>
    <script src="~/Content/_template/js/bootstrap-modal.js"></script>
    <script src="~/Content/_template/js/bootstrap-dropdown.js"></script>
    <script src="~/Content/_template/js/bootstrap-scrollspy.js"></script>
    <script src="~/Content/_template/js/bootstrap-tab.js"></script>
    <script src="~/Content/_template/js/bootstrap-tooltip.js"></script>
    <script src="~/Content/_template/js/bootstrap-popover.js"></script>
    <script src="~/Content/_template/js/bootstrap-button.js"></script>
    <script src="~/Content/_template/js/bootstrap-collapse.js"></script>
    <script src="~/Content/_template/js/bootstrap-carousel.js"></script>
    <script src="~/Content/_template/js/bootstrap-typeahead.js"></script>
    <script src="~/Content/_template/js/bootstrap-tour.js"></script>
    <script src="~/Content/_template/js/jquery.cookie.js"></script>
    <script src='~/Content/_template/js/fullcalendar.min.js'></script>
    <script src='~/Content/_template/js/jquery.dataTables.min.js'></script>
    <script src="~/Content/_template/js/excanvas.js"></script>
    <script src="~/Content/_template/js/jquery.flot.min.js"></script>
    <script src="~/Content/_template/js/jquery.flot.pie.min.js"></script>
    <script src="~/Content/_template/js/jquery.flot.stack.js"></script>
    <script src="~/Content/_template/js/jquery.flot.resize.min.js"></script>
    <script src="~/Content/_template/js/jquery.chosen.min.js"></script>
    <script src="~/Content/_template/js/jquery.uniform.min.js"></script>
    <script src="~/Content/_template/js/jquery.colorbox.min.js"></script>
    <script src="~/Content/_template/js/jquery.cleditor.min.js"></script>
    <script src="~/Content/_template/js/jquery.noty.js"></script>
    <script src="~/Content/_template/js/jquery.elfinder.min.js"></script>
    <script src="~/Content/_template/js/jquery.raty.min.js"></script>
    <script src="~/Content/_template/js/jquery.iphone.toggle.js"></script>
    <script src="~/Content/_template/js/jquery.autogrow-textarea.js"></script>
    <script src="~/Content/_template/js/jquery.uploadify-3.1.min.js"></script>
    <script src="~/Content/_template/js/jquery.history.js"></script>
    <script src="~/Content/_template/js/charisma.js"></script>


</body>
</html>

